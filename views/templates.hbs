<!-- Modal TEMPLATE -->
<div class="modal fade bd-example-modal-lg" id="templateModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">New Template</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form action="/addTemplate" method="post">
                <div class="modal-body text-center">
                    <div class="form-group row">
                        <label for="ttitle" class="col-sm-4 col-form-label col-form-label-lg">Template Title:</label>
                        <div class="col-sm-4">
                            <input type = "text" class="form-control nameField" id = "ttitle" name = "t-title">
                        </div>
                        <label for="tcolor" class="col-sm-2 col-form-label col-form-label-lg">Color:</label>
                        <div class="col-sm-2">
                            <input type="color" class="form-control" id="tcolor" name="t-color" value="#ff0000"></input>
                        </div>
                    </div>
                    <div id="fieldsSection"></div>
                    <button type="button" class="btn btn-primary" onclick="appendNewField()">Add Field</button>
                    <br/>
                    <br/>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Dismiss</button>
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>

