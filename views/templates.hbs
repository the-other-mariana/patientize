<section>
    <script src="/javascripts/update-templates.js"></script>
<script>
    var i = 0
    function appendNewField(){
        var fieldsSection = $('#fieldsSection');
        var fieldTemplate = $('#fieldTemplate');
        fieldTemplate.find('.nameField').attr('name', 'nameField-' + i);
        fieldTemplate.find('.typeField').attr('name', 'typeField-' + i);

        fieldsSection.append(fieldTemplate.html());
        i += 1;
    }
    function newTemplate(){
        i = 0
        $('#fieldsSection').empty();
    }
</script>
<div class="card text-center">
    <div class="card-header">
